doctype html
block vars
  - var bodyclass = null;
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no")
      title
        block title
          = locals.name
      link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)

      link(href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet")
      link(href="https://fonts.googleapis.com/css?family=Quicksand|Forum|Merriweather" rel="stylesheet")
      link(rel='stylesheet', href=locals.url+contents.css['main.css'].url)

      | !{ livereloadScript }

  body(class=bodyclass)

    header.header
      div.content-wrap
        block header
          div.header__logo
            img(src=locals.logoUrl)
            h1.header__title
              a(href=locals.url)= locals.name
            p.header__desc= locals.description

    main#content
      div.content-wrap
        block content
          h2 Welcome to zombocom!

    footer
      div.content-wrap
        block footer

          section.about
            !=contents['about.md'].html

          section.copy
            p Copyright &copy; #{ new Date().getFullYear() } #{ locals.owner } &mdash; powered by&nbsp;
              a(href='https://github.com/jnordberg/wintersmith') Wintersmith
              //- please leave the "powered by" if you use the design
